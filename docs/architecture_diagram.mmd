graph TD
    %% Nodes
    User([User Browser])
    
    subgraph GKE_Cluster["Google Kubernetes Engine ([LDAP]-agiles-cluster)"]
        Flask["Python Flask App\n(Monolithic Container)"]
    end
    
    subgraph GCP_Services["Google Cloud Platform Services"]
        GCS["Google Cloud Storage\n(Bucket: [LDAP]-agiles-video-upload)"]
    end

    %% Simplified Upload Flow
    User -- "1. POST /upload\n(multipart/form-data: video.mp4)" --> Flask
    Flask -- "2. Write Object\n(gs://[LDAP]-agiles-video-upload/&lt;uuid&gt;/video.mp4)" --> GCS
    GCS -- "3. Object Stored Confirmation" --> Flask %% Implicit return from GCS API
    Flask -- "4. Return Confirmation\n(UUID, GCS Path)" --> User

    %% Styling
    classDef gcp fill:#e8f5e9,stroke:#2e7d32,stroke-width:2px;
    classDef app fill:#e3f2fd,stroke:#1565c0,stroke-width:2px;
    classDef client fill:#fff3e0,stroke:#ef6c00,stroke-width:2px;
    
    class GCS gcp;
    class Flask app;
    class User client;

